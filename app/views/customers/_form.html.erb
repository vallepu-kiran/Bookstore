
<%= form_with model: @customer do |form| %>
    <div>
      <%= form.label :first_name %><br>
      <%= form.text_field :first_name %>
    </div>
  
    <div>
      <%= form.label :last_name %><br>
      <%= form.text_field :last_name %>
    </div>
    <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
    </div>
    <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
    </div>
    <div>
      <%= form.submit %>
    </div>
  <% end %>